citHeader("To cite package 'LiblineaR' in publications use:")

desc <- packageDescription("LiblineaR")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", desc$Date)
vers <- paste("R package version", desc$Version)

citEntry(entry="Manual",
	title = "LiblineaR: Linear Predictive Models Based On The Liblinear C/C++ Library",
	author = personList(as.person("Thibault Helleputte")),
	year = year,
	note = vers,
	textVersion =
	paste("Thibault Helleputte ","(",year,"). LiblineaR: Linear Predictive Models Based On The Liblinear C/C++ Library.",vers, ".", sep="")
)